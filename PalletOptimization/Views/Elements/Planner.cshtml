@model IEnumerable<PalletOptimization.Models.Elements>

@{
    ViewData["Title"] = "Planner";
}

<h1>Planner</h1>


@if(Model?.Count() > 0){
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RotationRules)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsSpecial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxElementsPerPallet)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Length) (mm)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Width) (mm)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height) (mm)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight) (Kg)
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RotationRules)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsSpecial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxElementsPerPallet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Width)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        <div style="text-align: right; margin-top: 10px;">
                            <button asp-action="Edit" style="padding: 2px 5px;background-color: #BB00AA; color: white; border-radius: 5px; cursor: pointer;">
                                Customize
                            </button>
                        </div>
                    </td>
                    
                </tr>
            }
            <!--to get the button on the right side, im sorry...-->
            <!--♫You would not belive you're eyes, you'd wish that you were blind♫-->
        
        </tbody>
    </table>
    <div style="text-align: right; margin-top: 10px;">
        <a asp-action="GeneratePackingPlan" style="padding: 10px 20px; background-color: #00BB33; color: white; border-radius: 5px; cursor: pointer;">
            Get Packing Plan!
        </a>
    </div>

       

} else
{
    <p>No order loaded, want to add a random one?</p>
    <div style="margin-top: 10px;">
        <a asp-action="MakeOrder" style=" padding: 10px 20px; background-color: #007BFF; color: white; border-radius: 5px; cursor: pointer;">
            Generate order
        </a>
    </div>
}
