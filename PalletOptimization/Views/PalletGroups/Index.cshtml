@model IEnumerable<PalletOptimization.Models.PalletGroup>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create" style="text-white; border-radius: 5px; background-color:seagreen; color:white; border:none" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxWeight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxWeight)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"    style="background-color:greenyellow; border-radius: 5px;border:none; color:black; margin-right:5px;padding:5px;padding-top:2px">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id" style="background-color:deepskyblue; border-radius: 5px;border:none; color:black; padding:5px; padding-top:2px">Details</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id"  style="background-color:red;         border-radius: 5px;border:none; color:white; margin-left:5px; padding:5px; padding-top:2px">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
